startup_message off
defscrollback 10000
vbell off
activity ''
shelltitle '$ |'
hardstatus string 'screen / %h'
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= kg}[ %{G}%H %{g}]%= %{= kw}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{W}'

# Use alt+arrows keys to navigate between windows in regions
bindkey ^[[1;3C focus down
bindkey ^[[1;3D focus
bindkey ^[[1;3A focus top
bindkey ^[[1;3B focus bottom

altscreen on # prevent vim, etc, from appearing in scrollback
maptimeout 5
term xterm
